{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowImportingTsExtensions": false,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "types": [
            "node",
            "@welldone-software/why-did-you-render",
            "jest"
        ],
        "baseUrl": ".",
        "paths": {
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@abis/*": [
                "src/abis/*"
            ],
            "@connectors/*": [
                "src/connectors/*"
            ],
        }
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules"
    ]
}