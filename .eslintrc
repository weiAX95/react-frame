{
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "airbnb/hooks",
        "plugin:@typescript-eslint/recommended-type-checked",
        "plugin:@typescript-eslint/stylistic-type-checked",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "plugins": [
        "@typescript-eslint",
        "react",
        "jest",
        "import",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.eslint.json",
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        // 这里可以添加自定义规则
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": "error",
        "endOfLine": "auto"
    },
    "ignorePatterns": [
        "dist/",
        "node_modules/",
        "build/",
        "backup/"
    ]
}